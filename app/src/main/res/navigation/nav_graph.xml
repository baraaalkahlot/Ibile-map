<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ibile.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_locationSearchSelectedResultFragment"
            app:destination="@id/locationSearchSelectedResultFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editMarkerDialogFragment"
            app:destination="@id/editMarkerDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationSearchSelectedResultFragment"
        android:name="com.ibile.LocationSearchSelectedResultFragment"
        android:label="LocationSearchSelectedResultFragment"
        tools:layout="@layout/fragment_location_search_selected_result">
        <argument
            android:name="arg_selected_search_place_id"
            app:argType="string" />
    </fragment>

    <dialog
        android:id="@+id/editMarkerDialogFragment"
        android:name="com.ibile.EditMarkerDialogFragment"
        android:label="EditMarkerDialogFragment"
        tools:layout="@layout/epoxy_view_edit_marker_details_body">
    </dialog>
</navigation>